{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "DJANGO: runserver",
      "type": "shell",
      "command": "${workspaceFolder}/venv/Scripts/python.exe",
      "args": ["${workspaceFolder}/backend/manage.py", "runserver", "0.0.0.0:8000"],
      "options": { "cwd": "${workspaceFolder}/backend" },
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "NEXT: dev",
      "type": "shell",
      "command": "npm",
      "args": ["run", "dev"],
      "options": { "cwd": "${workspaceFolder}/frontend" },
      "group": "build",
      "problemMatcher": ["$tsc"],
      "isBackground": true
    },
    {
      "label": "APP: start both",
      "dependsOn": ["DJANGO: runserver", "NEXT: dev"],
      "dependsOrder": "parallel"
    }
  ]
}
